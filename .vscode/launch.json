{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch cmd/main.go",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd",
            "cwd": "${workspaceFolder}",
            "env": {
                "PATH": "/usr/local/go/bin:/home/ihsokolo/go/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
            },
            "args": []
        },
        {
            "name": "Attach to K3D (image-service)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app",
            "port": 2349,
            "host": "localhost",
            "showLog": true,
            "trace": "verbose",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/src/svc"
                },
                {
                    "from": "${workspaceFolder}/../ecommerce-commons",
                    "to": "/src/ecommerce-commons"
                }
            ]
        }
    ]
}